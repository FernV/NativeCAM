<xml>
    <group name='Basic Shapes' icon="rect.png">
        <sub name='Rectangle' tool_tip='Create a rectangle with optional corner types' icon="center-rect.png" src="plasma/rectangle.cfg"/>
        <separator/>
        <sub name='Circle' tool_tip='Create a circle with optional D flat' icon="circle.png" src="plasma/circle.cfg"/>
        <sub name='Circle From 2 Points' tool_tip='Define ends of diameter' icon="circle-2.png" src="plasma/circle-2.cfg"/>
        <separator/>
        <sub name='Slot/Oval From 1 Point' tool_tip='Define a point, angle and length' icon="slot.png" src="plasma/slot.cfg"/>
        <sub name='Slot/Oval From 2 Points' tool_tip='Define center of ends' icon="slot-2.png" src="plasma/slot-2.cfg"/>
        <sub name='Radial Slot' tool_tip='Create an radial slot' icon="radial-slot.png" src="plasma/slot-arc.cfg"/>
        <separator/>
        <sub name='Ellipse' tool_tip='Create an ellipse' icon="ellipse.png" src="plasma/ellipse.cfg"/>
        <sub name='Polygon' tool_tip='Polygon of N edges' icon="hexagon.png" src="plasma/polygon.cfg"/>
    </group>
    <group name='Advanced' icon='adv-Ab.png'>
		<group name='Polyline' icon="polyline.png">
			<sub name='Begin' tool_tip='Starts a polyline' icon="close.png" src="plasma/polyline.cfg"/>
			<separator/>
			<sub name='Line To' tool_tip='Relative or absolute position' icon="line-to.png" src="plasma/polyline-to.cfg"/>
			<sub name='Line Polar' tool_tip='Define angle and length' icon="line-al.png" src="plasma/polyline-polar.cfg"/>
			<separator/>
			<sub name='Arc I,J' tool_tip='Defined center by offsets or absolute position' icon="arc-to-xyij.png" src="plasma/polyline-arc-ij.cfg"/>
			<sub name='Arc Polar Center' tool_tip='Define center at angle and distance' icon="arc-to-xyij.png" src="plasma/polyline-arc-polar.cfg"/>
			<sub name='Arc To Coords' tool_tip='Define end point, arc height or radius' icon="arc-to-xyr.png" src="plasma/polyline-arc-to.cfg"/>
			<sub name='Arc To Polar' tool_tip='Define end point, arc height or radius' icon="arc-to-xyr.png" src="plasma/polyline-arc-top.cfg"/>
			<sub name='Arc Mirror End' tool_tip='Define I,J and mirror line' icon="arc-to-xyr.png" src="plasma/polyline-arc-m.cfg"/>
			<separator/>
	        <sub name='Repeat Items' tool_tip='Repeat a group of polyline items' icon="array.png" src="plasma/polyline-repeat.cfg"/>
			<sub name='Mirror Items' tool_tip='Duplicate and reverse polyline items' icon="array.png" src="plasma/polyline-mirror-i.cfg"/>
			<separator/>
			<sub name='Mirror Polyline' tool_tip='Create a reversed polyline from previous one' icon="array.png" src="plasma/polyline-mirror-p.cfg"/>
		</group>
    </group>
    <group name='Group, Offset And Rotation' icon="group.png">
		<sub name='Standard Group' tool_tip='Group subroutines' icon="group.png" src="group.cfg"/>
		<sub name='Offset/Rotate' tool_tip='Group subroutines, offset and rotate' icon="group.png" src="group-off.cfg"/>
        <separator/>
        <sub name='Radial Array' tool_tip='Define diameter or distance between groups' icon="circ-array-diam.png" src="circular-array.cfg"/>
        <sub name='Rectangular Array' tool_tip='Array of rows and columns' icon="rect-array.png" src="rectangular-array.cfg"/>
    </group>
    <sub name='Cutting Params' tool_tip='Set cutting parameters' icon="tool-change.png" src="plasma/cutting-params3d.cfg"/>
    <group name='Miscellaneous' icon='misc.png'>
        <sub name='Raw Material' tool_tip='Show a temporary image of rough material' icon="rect.png" src="plasma/material3d.cfg"/>
        <sub name='Custom G Code' tool_tip='Write custom gcode' icon="gcode.png" src="gcode.cfg"/>
        <sub name='Insert a G Code file' tool_tip='Include a custom gcode file' icon="gcode.png" src="i_gcode.cfg"/>
		<sub name='Comment' tool_tip='Add comments' icon="gcode.png" src="comment.cfg"/>
        <sub name='Change Units' tool_tip='Temporarily change units' icon="rect.png" src="change-units.cfg"/>
    </group>
</xml>
